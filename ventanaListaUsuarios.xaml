<Window x:Class="TrabajoAula.ventanaListaUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrabajoAula"
        mc:Ignorable="d"
        Title="ventanaListaUsuarios" Height="216.5" Width="351.316">
    <Grid Margin="0,0,5,0.5">
        <Label x:Name="labelListaUsuarios" Content="Lista Usuarios" HorizontalAlignment="Left" Margin="111,23,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="botonSeleccionarUsuario" Content="Seleccionar" HorizontalAlignment="Left" Margin="56,152,0,0" VerticalAlignment="Top" Width="76" Click="BotonSeleccionarUsuario_Click"/>
        <Button x:Name="botonVolverLista" Content="Volver" HorizontalAlignment="Left" Margin="206,152,0,0" VerticalAlignment="Top" Width="76" Click="BotonVolverLista_Click"/>
        <Label Content="Por favor selecciona el usuario:" HorizontalAlignment="Left" Margin="26,67,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <ComboBox x:Name="comboUsuarios" HorizontalAlignment="Left" Margin="26,98,0,0" VerticalAlignment="Top" Width="291" SelectionChanged="comboUsuarios_SelectionChanged"/>

    </Grid>
</Window>
